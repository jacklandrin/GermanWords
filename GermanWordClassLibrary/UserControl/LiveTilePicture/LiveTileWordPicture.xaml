<UserControl x:Class="GermanWordsClassLibrary.UserControl.LiveTilePicture.LiveTileWordPicture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336">

    <Canvas x:Name="LayoutRoot" Background="{StaticResource PhoneAccentBrush}"
            Width="336" Height="336">
        <Canvas Width="297" Height="42"
                Canvas.Left="10" Canvas.Top="10">
            <TextBlock Name="TextBlock_Line0" Width="297"
                       TextAlignment="Right" FontSize="32" Text="Adj." />
        </Canvas>
        <Canvas Width="297" Height="176"
                Canvas.Left="10" Canvas.Top="60">
            <TextBlock Name="TextBlock_Line1" Width="297"
                       TextWrapping="Wrap" FontSize="132" Text="gut" />
        </Canvas>
        <Canvas Width="297" Height="88"
                Canvas.Left="10" Canvas.Top="250">
            <TextBlock Name="TextBlock_Line2" Width="297"
                       TextAlignment="Right" FontSize="64" Text="好的" />
        </Canvas>
    </Canvas>
</UserControl>