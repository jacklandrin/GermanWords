<UserControl x:Class="GermanWordsClassLibrary.UserControl.LiveTilePicture.MainTileBackPicture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336" Background="{x:Null}">

    <Canvas x:Name="LayoutRoot" Width="336" Height="336" Background="{StaticResource PhoneAccentBrush}">
        <TextBlock Name="TextBlock_Head" Canvas.Left="15" Canvas.Top="10"  
                   FontSize="80" Text="今日" Foreground="White" />
        <Canvas Name="Canvas_Content" Canvas.Left="60" Canvas.Top="140">
            <TextBlock Name="TextBlock_Value" Foreground="#FF45FF00"
                       FontSize="100" FontWeight="Bold"  Text="10.8" />
            <TextBlock Name="TextBlock_Unit" Canvas.Left="200" Canvas.Top="65"
                       FontSize="30" Text="分钟" Foreground="White"/>
        </Canvas>
    </Canvas>
</UserControl>
