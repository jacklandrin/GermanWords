<UserControl x:Class="GermanWordsClassLibrary.UserControl.LiveTilePicture.LiveTileAbbrPicture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336">

    <Canvas x:Name="LayoutRoot" Background="{StaticResource PhoneAccentBrush}"
            Width="336" Height="336">
        <Canvas Width="297" Height="114"
                Canvas.Left="10" Canvas.Top="10">
            <TextBlock Name="TextBlock_Line1"
                       FontSize="80" Text="z.H." />
        </Canvas>
        <Canvas Width="297" Height="114"
                Canvas.Left="10" Canvas.Top="120">
            <TextBlock Name="TextBlock_Line2" Width="153"
                       TextAlignment="Right" FontSize="82" Text="zu Händen" />
        </Canvas>
        <Canvas Width="297" Height="80"
                Canvas.Left="10" Canvas.Top="250">
            <TextBlock Name="TextBlock_Line3" Width="153"
                       TextAlignment="Right" FontSize="60" Text="亲启" />
        </Canvas>
    </Canvas>
</UserControl>